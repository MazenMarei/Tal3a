type User = record {
    id: nat64;
    user_principal: principal;
    email: opt text;
    name: text;
    avatar_url: opt text;
};

type Result = variant {
    Ok: User;
    Err: text;
};

service : {
    "get_user_data" : () -> (Result) query;
    "update_user_data" : (email: opt text, name: opt text, avatar_url: opt text) -> (Result);
}
