{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "experimentalDecorators": true,
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "ES2020",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
